<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_timeattack_incio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_timeattackinicio"    
     >
     <!-- fondo alternativo para background del layout general 
     android:background="@drawable/fondo_botonmenu1" -->
     <TextView 
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"       
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/botonmodotimeatack"
        android:typeface="serif"
        android:textColor="#000044"
        android:textSize="30sp"
        android:textStyle="bold"        
         />
          
      <ImageView       
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/boton_time3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
         />
          
     <Button 
      	 android:id="@+id/timeattack_botonplay"
         android:layout_height="wrap_content"
         android:layout_width="200dp"
         android:layout_gravity="center_horizontal"	
         android:text="@string/jugar"
         android:padding="5dp"    	
         android:textSize="26sp"
         android:textStyle="bold"
         android:background="@drawable/fondo_botontimeattack"
         android:onClick="botonPlayInicio"
         android:layout_marginBottom="10dp"        
        />             
        <!-- Fondo alternativo a los botones y spinners
         android:background="@drawable/fondo_botontimeattack" -->
           
    <Spinner 
         android:id="@+id/timeattack_spiner"
         android:layout_height="wrap_content"
         android:layout_width="200dp"
         android:padding="5dp"    	
         android:textStyle="bold"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/fondo_botontimeattack"
         android:layout_marginBottom="10dp"           
        />
         
    <Spinner 
         android:id="@+id/timeattack_spiner_temas"
         android:layout_height="wrap_content"
         android:layout_width="200dp"
         android:padding="5dp"    	
         android:textStyle="bold"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/fondo_botontimeattack"
         android:layout_marginBottom="10dp"      
         android:drawSelectorOnTop="true"  
        />
    
   	<Button 
         android:id="@+id/timeattack_botonmenu"
         android:layout_height="wrap_content"
         android:layout_width="200dp"
         android:layout_gravity="center_horizontal"
         android:text="@string/salir"
         android:textStyle="bold"
         android:padding="5dp"    	
         android:textSize="26sp"
         android:background="@drawable/fondo_botontimeattack"
         android:onClick="botonMenuSalir"
         android:layout_marginBottom="10dp"
         />
                     
    
</LinearLayout>