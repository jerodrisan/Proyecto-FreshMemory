<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:id="@+id/linearfinpantalla1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
    android:background="@drawable/fondo_timeattack"
        
    >

    <TextView
        
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/nivel_completado"
        android:textColor="@color/silver"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/boton_thumbsup2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="@string/puntos_modoclasico"
            android:textColor="@color/silver"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marcador_puntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="400,80"
            android:textColor="@color/silver"
            android:textSize="18sp"
            android:textStyle="bold" />
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:gravity="center_vertical"
        android:orientation="horizontal"       
         >

        <TextView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"  
            android:layout_weight="1"        
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="@string/aciertos_modoclasico"
            android:textColor="@color/silver"
            android:textSize="18sp"  
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/marcador_aciertos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="40"
            android:textColor="@color/silver"
            android:textSize="18sp"
            android:textStyle="bold" />

       
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:gravity="center_vertical"
        android:orientation="horizontal"       
         >

        <TextView                       
            android:layout_width="0dp"
            android:layout_height="wrap_content"  
            android:layout_weight="1"        
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="@string/combos_modoclasico"
            android:textColor="@color/silver"
            android:textSize="18sp"  
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/marcador_combos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="40"
            android:textColor="@color/silver"
            android:textSize="18sp"
            android:textStyle="bold" />

       
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:gravity="center_vertical"
        android:orientation="horizontal"       
         >

        <TextView                       
            android:layout_width="0dp"
            android:layout_height="wrap_content"  
            android:layout_weight="1"        
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="@string/tiempo_modoclasico"
            android:textColor="@color/silver"
            android:textSize="18sp"  
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/marcador_tiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:text="40"
            android:textColor="@color/silver"
            android:textSize="18sp"
            android:textStyle="bold" />

       
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"      
        android:layout_marginLeft="20dp"   
        android:layout_marginRight="20dp"         
         >

        <Button
            android:id="@+id/backTomenu_finpantalla1"
            android:layout_width="0dp"
          	android:layout_height="wrap_content"       
          	android:layout_weight="1"     	
          	android:textSize="22sp"
          	android:text="@string/salir"
          	android:padding="8dp"
          	android:textStyle="bold"
          	android:layout_marginRight="10dp"
          	android:background="@drawable/fondo_botonclassic" 
          	
             />

        <Button
            android:id="@+id/repeatGame_finpantalla1"
            android:layout_width="0dp"
          	android:layout_height="wrap_content"    
          	android:layout_weight="1"     	        	
           	android:textSize="22sp"
           	android:text="@string/repetir"
          	android:padding="8dp"
          	android:textStyle="bold"
          	android:background="@drawable/fondo_botonclassic"            
            
            />

    </LinearLayout>
    
     <LinearLayout       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"                
        
         >
         <Button 
          	android:id="@+id/compartir_nivel"
          	android:layout_width="120dp"
          	android:layout_height="wrap_content"          
          	android:drawableTop="@drawable/boton_shareit"
          	android:text="@string/compartir"          	
         	android:textSize="19sp"
          	android:padding="5dp"
          	android:textStyle="bold"
          	android:layout_marginRight="20dp"
          	android:background="@drawable/fondo_botonclassic" 
          	    
          />
         <Button 
          	android:id="@+id/global_scores"
          	android:layout_width="120dp"
          	android:layout_height="wrap_content"          	
          	android:drawableTop="@drawable/boton_leader"
          	android:text="@string/boton_leaderboards"          	
         	android:textSize="19sp"
          	android:padding="5dp"
          	android:textStyle="bold"
          	android:background="@drawable/fondo_botonclassic" 
            android:visibility="gone"
                  
          />

      

    </LinearLayout>
    
       

</LinearLayout>