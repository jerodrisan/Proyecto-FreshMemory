<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- Estilo de boton jugar  . Ver http://developing.frogtek.org/2011/04/14/botones-android-programacion/
    Ojo , no programar los estilos de forma dinamica porque no se puede. Siempre en el xml. 
    NO podemos aplicar el estilo de forma : botonview.setStyle(R.style.*)
    -->
    <style name="StyleBotonJugar">
		<item name="android:gravity">center</item>
		<item name="android:textColor">#fff</item> <!-- gris -->
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_height">40px</item>
		<item name="android:layout_width">350px</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">28px</item>
		<item name="android:drawableLeft">@drawable/iconogame</item>
		<item name="android:paddingLeft">55px</item>
		<item name="android:drawablePadding">-55px</item>
		<item name="android:text">Jugar</item>
	</style>
 
	<style name="StyleBotonJugar2" parent="@style/StyleBotonJugar">
		<item name="android:background">@drawable/shape_botonstartgame </item>       
	</style>
	
	
	
	<!-- Estilo para imageview1 -->
	<style name="myImageView1">
    <!-- 3dp so the background border to be visible -->
    <item name="android:padding">3dp</item>
    <item name="android:background">@drawable/image_border</item>
    <item name="android:scaleType">fitCenter</item>
</style>

</resources>