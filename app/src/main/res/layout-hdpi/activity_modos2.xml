<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_modos2_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@drawable/fondomodos"
    >
    
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:orientation="vertical"        
     >
      
	<!-- 	android:textColor="#384f79" -->
    <TextView 
        android:id="@+id/textModos2"       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/modosecuencias"
        android:textSize="30sp"
      	android:textColor="@color/blue2"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="serif"
        android:layout_marginTop="9dp"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        />
    
    <LinearLayout
        android:id="@+id/linearmodosseleccion_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" 
        >
        
    	<LinearLayout 
        	android:id="@+id/linearsecuencia1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginBottom="17dp"
      	
        >
        	<!--  Opciones para poner de fondo en los botones: android:background="@drawable/boton_pressed1" -->
        	<Button
        		android:id="@+id/botonmodoseries"
        		android:layout_width="200dp"
        		android:layout_height="wrap_content"
        		android:text="@string/tituloseries"
        		android:textSize="25sp"    
        		android:textColor="@color/white"
        		android:padding="4dp"    	    	
        		android:onClick="botonModoSeries" 
        		android:background="@drawable/fondo_botonhalo"        	     
       		 />
               
        	<ImageView 
            	android:id="@+id/botoninfo1"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/botoninfo_72"
				android:onClick="informacionModoSeries"
            	/>
        
       		<ImageView 
            	android:id="@+id/botonmedal1"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/boton_medalla"
				android:onClick="botonMarcadoresSeries"
            	/>
         
    	</LinearLayout>
    
     	<LinearLayout 
        	android:id="@+id/linearsecuencia2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"       
        	android:layout_marginBottom="17dp"        
        	>
       		
        	 <Button
        		android:id="@+id/botonmodonumeros"
        		android:layout_width="200dp"
        		android:layout_height="wrap_content"
        		android:text="@string/titulonumeros"
        		android:textColor="@color/white"
        		android:textSize="25sp"    
        		android:padding="4dp"    	    	     	
        		android:onClick="botonNumeros"
        		android:background="@drawable/fondo_botontimeattack"
         		/>
         	<ImageView 
            	android:id="@+id/botoninfo2"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/botoninfo_72"
				android:onClick="informationNumeros"
            	/>
        
        	<ImageView 
            	android:id="@+id/botonmedal2"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/boton_medalla"
				android:onClick="botonMarcadoresNumeros"
            	/>
                 
    	</LinearLayout>
      
    	<LinearLayout 
        	android:id="@+id/linearsecuencia3"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:orientation="horizontal"               	
        	>
        
         	<Button
        		android:id="@+id/botonmodosimon"
        		android:layout_width="200dp"
        		android:layout_height="wrap_content"
        		android:text="@string/modosimon"
        		android:textColor="@color/white"
        		android:textSize="25sp"    
        		android:padding="5dp"    	    	   	
        		android:onClick="botonModoSimon"  
        		android:background="@drawable/fondo_botonretocolores"
        		/>
         
          	<ImageView 
            	android:id="@+id/botoninfo3"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/botoninfo_72"
				android:onClick="informationSimon"
            	/>
        
        	<ImageView 
            	android:id="@+id/botonmedal3"
            	android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/boton_medalla"
				android:onClick="botonMarcadoresSimon"
            	/>
                
    	</LinearLayout>
     </LinearLayout>
   	
     <LinearLayout        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" 
        >	
	
   		<RelativeLayout 
      		android:id="@+id/relativelayout_modos2"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
  	  		android:background="@drawable/fondo_informativo"  
  	  		android:layout_marginLeft="10dp" 
  	  		android:layout_marginRight="10dp"	  	  
  			>
        
      		<ImageView 
          		android:id="@+id/imageninfor1secuencias"
          		android:layout_centerVertical="true"
          		android:layout_height="110dp"
          		android:layout_width ="85dp"
          		android:layout_margin="8dp"
          		/>
      
      		<RelativeLayout 
          		android:id="@+id/linearlaytextinfo"
          		android:layout_toRightOf="@id/imageninfor1secuencias"
          		android:layout_height="110dp"
          		android:layout_width="match_parent"         
         		android:padding="8dp"
          		>
     
          		<TextView               
            		android:id="@+id/textviewinformationtitlesecuencias"            
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"           
            		android:textStyle="bold"
            		android:textSize="17sp"
            		android:textColor="@color/white"
            		android:layout_alignParentLeft="true"
          			/>
          
          		<TextView 
            		android:layout_below="@id/textviewinformationtitlesecuencias"
          			android:id="@+id/textviewinformationsecuencias"
          			android:layout_width="wrap_content"
            		android:layout_height="match_parent"
            		android:textStyle="normal"
            		android:textColor="@color/white"
          			android:textSize="13sp"         
            		android:gravity="center_vertical"
            		android:layout_centerInParent="true"          
         			/>
         </RelativeLayout>
     </RelativeLayout>
     </LinearLayout>      
     <com.google.android.gms.ads.AdView
   		    	 android:id="@+id/adView"   		    	
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 ads:adUnitId="ca-app-pub-6622316255260090/7390252562"
                 ads:adSize="SMART_BANNER"/>   
  </LinearLayout>  
     
       
  <ViewStub 
	       android:id="@+id/viewstubHighScores"
           android:inflatedId="@+id/panelimport4"
           android:layout="@layout/high_scores"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="50dp"
           android:layout_marginBottom="50dp"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"
  		   android:layout_centerInParent="true"  		   
            />
  
	  
</RelativeLayout>